<view class="container">
  <!-- 收货地址 -->
  <view class="address">

    <!-- 如果有收货地址才显示 -->
    <view wx:if="{{ address.userName }}"  bindtap="handleGetAddress">
      <view class="address-info">
        <text>收货人：{{ address.userName }}</text>
        <text>{{ address.telNumber }}</text>
      </view>

      <view class="address-text">
        收货地址：{{ address.detailInfo }}
      </view>
    </view>

    <!-- 获取收货地址的按钮 -->
    <view wx:else class="address-info" bindtap="handleGetAddress">添加收货地址</view>

    <image class="border" src="../../images/cart_border@2x.png"></image>
  </view>

  <!-- 购物车列表的头部 -->
  <view class="cart-title">
    <view class="iconfont icon-dianpu"></view>
    <text>购物车列表</text>
  </view>

  <!-- 商品列表 -->
  <view class="goods-item">
    <!-- 选中的按钮, color颜色是动态的 -->
    <icon class="selected" type="success" size="16" color="red"/>

    <view class="goods-info">
      <image 
      src="http://image2.suning.cn/uimg/b2c/newcatentries/0000000000-000000000826147951_1_400x400.jpg"
      mode="aspectFill"
      ></image>

      <!-- 商品的标题和价格 -->
      <view class="goods-right">
        <!-- 标题 -->
        <view class="goods-title">
          商品的标题和价格商品的标题和价格商品的标题和,价格商品的标题和价格商品的标题和价格
        </view>
        <!-- 价格和计算数量 -->
        <view class="goods-right-btm">
          <view class="goods-price">￥300</view>
          <!-- 计算数量 -->
          <view class="goods-numbers">
            <view class="goods-number-btn">-</view>
            <text>3</text>
            <view class="goods-number-btn">+</view>
          </view>
        </view>
      </view>

    </view>
  </view>

  <!-- 底部条 -->
  <view class="footer">
    <view class="footer-left">
      <icon type="success" size="16" color="red"></icon>
      全选
    </view>

    <view class="footer-center">
      <view>合计: <text class="colorRed">￥ 151562</text></view>
      <text class="colorGray">包含运费</text>
    </view>

    <view class="checkout">结算</view>
  </view>

</view>