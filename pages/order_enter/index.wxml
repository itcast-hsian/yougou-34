<view class="container">
  <!-- 收货地址 -->
  <view class="address">

    <!-- 如果有收货地址才显示 -->
    <view>
      <view class="address-info">
        <text>收货人：{{ address.userName }}</text>
        <text>{{ address.telNumber }}</text>
      </view>

      <view class="address-text">
        收货地址：{{ address.detailInfo }}
      </view>
    </view>

    <image class="border" src="../../images/cart_border@2x.png"></image>
  </view>

  <!-- 购物车列表的头部 -->
  <view class="cart-title">
    <view class="iconfont icon-dianpu"></view>
    <text>商品列表</text>
  </view>

  <!-- 商品列表 -->
  <view >
    <view class="goods-item" wx:for="{{ goods }}" wx:key="{{key}}">
      <view class="goods-info">
        <image 
        src="{{ item.goods_small_logo }}"
        mode="aspectFill"
        ></image>

        <!-- 商品的标题和价格 -->
        <view class="goods-right">
          <!-- 标题 -->
          <view class="goods-title">
            {{item.goods_name  }}
          </view>
          <!-- 价格和计算数量 -->
          <view class="goods-right-btm">
            <view class="goods-price">￥{{ item.goods_price }}</view>
            <!-- 计算数量 -->
            <view class="goods-numbers">
              
              <text>x {{ item.number }}</text>
              
            </view>
          </view>
        </view>

      </view>
    </view>
  </view>

  <view class="allprice">
    总价：￥{{ allPrice }}
  </view>

  <button type="primary">支付</button>

</view>