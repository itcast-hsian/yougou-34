.search{
  padding:20rpx;
  background: #eee;
}

.search-input{
  background:#fff;
  height:60rpx;
  display: flex;
  align-items: center;
  font-size:14px;
  color:#666;
  padding: 0 20rpx;
}

.search-input icon{
  margin-right:10rpx;
}

.tab{
  padding: 20rpx 0;
  display: flex;
  justify-content: space-around;
  border-bottom:1px #ddd solid;
}

.tab .active{
  color:red;
}

.goods-item{
  display: flex;
  justify-content: space-between;
  padding:20rpx;
  border-bottom:1px #ddd solid;
}

/*flex-shrink:0;声明flex内部元素宽度不会被挤压*/
.goods-item image{
  width:200rpx;
  height:200rpx;
  flex-shrink:0;
}

.goods-right{
  margin-left:20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-title{
  overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-price{
  color: red;
  font-size:14px;
}

.goods-price text{
  font-size:20px;
}

.load-more{
  padding:20px;
  text-align: center;
  font-size:12px;
  color:#999;
}